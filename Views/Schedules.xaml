<Page x:Class="Space.Views.Schedules"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:oxy="clr-namespace:OxyPlot.Wpf;assembly=OxyPlot.Wpf"
      xmlns:local="clr-namespace:Space.Views"
      mc:Ignorable="d"
      Title="Графики анализа" Height="800" Width="1000">



    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <oxy:PlotView x:Name="chartSignal"
              Width="400" Height="200"
              HorizontalAlignment="Left"
              VerticalAlignment="Top"/>
        <oxy:PlotView x:Name="chartComparison"
              Width="400" Height="200"
              HorizontalAlignment="Left"
              VerticalAlignment="Bottom"/>
        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Графики анализа" Style="{StaticResource HeaderStyle}" Margin="20,20"/>

        <!-- Кнопки сигнал / сравнение -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,80,0,0">
            <Button x:Name="btnSignal" Click="btnSignal_Click" Style="{StaticResource MaterialPageButtonStyle}" Width="200" Height="60" Margin="10,0">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="ChartLine" Width="24" Height="24" Margin="0,0,10,0"/>
                    <TextBlock Text="Сигнал" VerticalAlignment="Center" FontSize="16"/>
                </StackPanel>
            </Button>
            <Button x:Name="btnSimul" Click="btnSimul_Click" Style="{StaticResource MaterialPageButtonStyle}" Width="200" Height="60" Margin="10,0">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Compare" Width="24" Height="24" Margin="0,0,10,0"/>
                    <TextBlock Text="Сравнение" VerticalAlignment="Center" FontSize="16"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <!-- График -->
        <oxy:PlotView x:Name="plotView" Grid.Row="1" Margin="20,20,20,20"/>

        <!-- Кнопка Назад / Статус -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,50">
            <Border Background="#F0F5FF" BorderBrush="#D0D5FF" BorderThickness="1" CornerRadius="8" Padding="20,12" Margin="0,-20,30,0" Height="75">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="CheckCircle" Width="24" Height="24" Margin="0,0,12,0" Foreground="#4CAF50"/>
                    <TextBlock Text="Статус: данные откалиброваны" FontSize="20" FontWeight="Medium" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
            <Button x:Name="btnBack" Click="btnBack_Click" Style="{StaticResource MaterialBackButtonStyle}" Width="250" Height="75">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="ArrowLeft" Width="28" Height="28" Margin="0,0,12,0"/>
                    <TextBlock Text="Назад" VerticalAlignment="Center" FontSize="22"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Page>
