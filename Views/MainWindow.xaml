<Window x:Class="Space.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Система обработки данных" 
        Height="800" 
        Width="1000"
        Background="{DynamicResource MaterialDesignPaper}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Frame x:Name="MainFrame"
               NavigationUIVisibility="Hidden"
               Visibility="Collapsed"/>
        <Grid Grid.Row="1" Margin="20" x:Name="MainContent">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="tbName"  
                       Text="Главное меню" 
                       Grid.ColumnSpan="2"
                       Style="{StaticResource BigHeaderStyle}"
                       VerticalAlignment="Top" 
                       TextAlignment="Center" 
                       Margin="0 20 0 20"/>

            <DataGrid x:Name="dataGrid"
                      Grid.Column="0"
                      Style="{StaticResource MaterialDataGridStyle}"
                      ColumnHeaderStyle="{StaticResource MaterialDataGridColumnHeaderStyle}"
                      CellStyle="{StaticResource CleanDataGridCellStyle}"
                      RowStyle="{StaticResource CleanDataGridRowStyle}"
                      Margin="0,130,0,20"
                      VerticalAlignment="Stretch">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Время"
                            Binding="{Binding Time}"
                            Width="83"/>
                    <DataGridTextColumn Header="Sun1X"
                        Binding="{Binding Sun1X}" Width="100"/>
                    <DataGridTextColumn Header="Sun1Y"
                        Binding="{Binding Sun1Y}" Width="100"/>
                   
                    
                    <DataGridTextColumn Header="Sun1X_C"
                        Binding="{Binding Sun1X_C}" Width="100"/>
                                    <DataGridTextColumn Header="Sun1Y_C"
                        Binding="{Binding Sun1Y_C}" Width="100"/>       
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Grid.Column="1" 
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center" 
                        Margin="30,70,60,0">
                <Button x:Name="btnLoad"
                        Style="{StaticResource MaterialPrimaryButtonStyle}"
                        Click="btnLoad_Click"
                        Width="250"
                        Margin="0,0,0,30">
                    <StackPanel Orientation="Horizontal" >
                        <materialDesign:PackIcon Kind="DatabaseImport" 
                                                  Width="24" 
                                                  Height="24" 
                                                  Margin="0,3,10,0"/>
                        <TextBlock Text="Загрузить данные" 
                                   VerticalAlignment="Center" 
                                   FontSize="20"/>
                    </StackPanel>
                </Button>
                <Button x:Name="btnCallibr"
                        Style="{StaticResource MaterialPrimaryButtonStyle}"
                        Click="btnCallibr_Click" 
                        Width="250"
                        Margin="0,0,0,30">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Tune" 
                                                  Width="24" 
                                                  Height="24" 
                                                  Margin="0,3,10,0"/>
                        <TextBlock Text="Калибровка" 
                                   VerticalAlignment="Center" 
                                   FontSize="20"/>
                    </StackPanel>
                </Button>
                <Button x:Name="btnGraph"
                        Style="{StaticResource MaterialPrimaryButtonStyle}"
                        Click="btnGraph_Click" 
                        Width="250"
                        Margin="0,0,0,30">
                    <StackPanel Orientation="Horizontal" >
                        <materialDesign:PackIcon Kind="ChartLine" 
                                                  Width="24" 
                                                  Height="24" 
                                                  Margin="0,3,10,0"/>
                        <TextBlock Text="Графики" 
                                   VerticalAlignment="Center" 
                                   FontSize="20"/>
                    </StackPanel>
                </Button>
                <Button x:Name="btnResult"
                        Style="{StaticResource MaterialPrimaryButtonStyle}"
                        Click="btnResult_Click" 
                        Width="250"
                        Margin="0,0,0,0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="FileDocument" 
                                                  Width="24" 
                                                  Height="24" 
                                                  Margin="0,2,10,0"/>
                        <TextBlock Text="Отчеты" 
                                   VerticalAlignment="Center" 
                                   FontSize="20"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>