<Page x:Class="Space.Views.Calibration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
      mc:Ignorable="d"
      Title="Calibration" Width="1000" Height="800">

        <Grid Background="#E6E9FA">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Калибровка солнечного датчика"
                   Margin="0,30,0,20"
                   Style="{StaticResource HeaderStyle}"/>

            <Grid Grid.Row="1" Margin="40">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Описание -->
                <Border Grid.Column="0" Margin="20"
                    Background="White"
                    CornerRadius="12"
                    Padding="30">

                    <StackPanel>
                        <TextBlock Text="Модель калибровки"
                               FontSize="26"
                               FontWeight="SemiBold"
                               Margin="0,0,0,20"/>

                        <TextBlock FontSize="22" TextWrapping="Wrap">
                        Используется линейная модель солнечного датчика:
                        X = k·X + b, Y = k·Y + b.
                        Калибровка устраняет смещение нуля и масштабную ошибку.
                        </TextBlock>

                        <Border Margin="0,30,0,0"
                            Padding="15"
                            BorderThickness="2"
                            BorderBrush="#8797FF"
                            CornerRadius="8">
                            <TextBlock FontSize="22" TextWrapping="Wrap"
                                   Text="Температурный дрейф в данном кейсе не учитывается."/>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Результаты -->
                <Border Grid.Column="1" Margin="20"
                    Background="White"
                    CornerRadius="12"
                    Padding="30">

                    <StackPanel>
                        <TextBlock Text="Результаты калибровки"
                               FontSize="26"
                               FontWeight="SemiBold"
                               Margin="0,0,0,30"/>

                        <StackPanel Orientation="Horizontal" Margin="0,10">
                            <TextBlock Text="Смещение X:" Width="200" FontSize="22"/>
                            <TextBox x:Name="TbOffsetX" Style="{StaticResource MaterialResultTextBoxStyle}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,10">
                            <TextBlock Text="Смещение Y:" Width="200" FontSize="22"/>
                            <TextBox x:Name="TbOffsetY" Style="{StaticResource MaterialResultTextBoxStyle}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,10">
                            <TextBlock Text="Масштаб X:" Width="200" FontSize="22"/>
                            <TextBox x:Name="TbScaleX" Style="{StaticResource MaterialResultTextBoxStyle}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,10">
                            <TextBlock Text="Масштаб Y:" Width="200" FontSize="22"/>
                            <TextBox x:Name="TbScaleY" Style="{StaticResource MaterialResultTextBoxStyle}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>

            <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,40">

            <Button Style="{StaticResource MaterialPageButtonStyle}" Width="300"
                    Click="PerformCalibration_Click">
                    <TextBlock Text="Выполнить калибровку" FontSize="22" />
                </Button>

            <Button Style="{StaticResource MaterialBackButtonStyle}" Width="300"
                    Margin="80,0,0,0"
                    Click="Back_Click">
                    <TextBlock Text="Назад" FontSize="22"/>
                </Button>
            </StackPanel>
        </Grid>
 

</Page>